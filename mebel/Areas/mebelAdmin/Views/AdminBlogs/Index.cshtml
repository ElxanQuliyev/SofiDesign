@model IEnumerable<mebel.Models.Blog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/mebelAdmin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Header)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Header)
        </td>
        <td>
            @if (item.Description.Length > 150)
            {
                @Html.DisplayFor(modelItem => item.Description.Substring(0, 150))

            }
            else
            {
                @Html.DisplayFor(modelItem => item.Description)

            }
        </td>
        <td style="width:25%">
            <img src="@item.Photo" class="img-thumbnail" alt="Alternate Text" />
        </td>
        <td>
            @item.CreateDate.ToString("dddd, dd MMMM yyyy"))
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
