                        </script>
                        @*<noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>*@


                    </div>
                    <!-- === blog comments === -->
                 

                </div>
                <!--blog-post-->
            </div>
            <!--col-sm-8-->
            <div class="col-sm-4 col-md-4 ">
                <h3 style="margin-bottom:10px">En son Xəbərlər</h3>
                <div style="border-bottom:1px solid #808080;margin:2px;width:60px;margin-bottom:20px;"></div>
                @foreach (var item in Model.blogList)
                {
                    <div class="resentBlog">
                        <div class="row">
                            <div class="col-md-4" style="margin-bottom:25px">
                                <img class="img-responsive" src="@item.Photo" style="object-fit:contain;max-height:300px;" alt="@item.Photo" />
                            </div>
                            <div class="col-md-8">
                                <div class="row">
                                    <h6 style="margin-bottom:5px">
                                        @if (item.Header.Length > 150)
                                        {
                                            <a href="@Url.Action("Details","AllBlog",new { id=item.Id})">@item.Header.Substring(0, 150)</a>
                                        }
                                        else
                                        {
                                            <a href="@Url.Action("Details","AllBlog",new { id=item.Id})">@item.Header</a>
                                        }
                                    </h6>

                                    <div style="border:1px solid #808080;width:35px;margin:2px"></div>
                                    <div class="entry">
                                        <i class="fa fa-calendar"></i>
                                        <small>@Model.blogDetail.CreateDate.ToString("MMMM dd,yyyy")</small>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</section>


