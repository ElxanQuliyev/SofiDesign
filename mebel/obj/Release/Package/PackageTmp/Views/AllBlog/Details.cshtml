@model mebel.ViewModels.homeModels
@using mebel.Models
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="main-header main-header-blog"
         style="background-image:url()">
    <header>
        <div class="container text-left">
            <h1 class="h2 title">@Model.blogDetail.Header</h1>
            <ol class="breadcrumb breadcrumb-inverted">
                <li><a href="@Url.Action("Index","Home")"><i class="fa fa-home"></i></a></li>
                <li><a href="@Url.Action("Index","AllBlog")">Bloq</a></li>
                <li><a class="active" href="article4.html">@Model.blogDetail.Header</a></li>
            </ol>
        </div>
    </header>
</section>

<section class="blog" id="simple-blog-article-view">
    
    <div class="container">
        <header class="hidden">
            <h3 class="h3 title">@Model.blogDetail.Header</h3>
        </header>
        <div class="row">
            <div class="col-sm-8  col-md-8 ">
                <div class="blog-post">
                    <!-- === blog main image & entry info === -->
                    <div class="blog-image-main">
                        <img src="@Model.blogDetail.Photo"
                             alt="@Model.blogDetail.Header"
                             title="@Model.blogDetail.Header" />
                    </div>
                    <div class="blog-post-content">

                        <!-- === blog post title === -->

                        <div class="blog-post-title">
                            <h1 class="blog-title">
                                @Model.blogDetail.Header
                            </h1>
                            <div class="blog-info blog-info-top">

                                <div class="entry">
                                    <i class="fa fa-calendar"></i>
                                    <span>@Model.blogDetail.CreateDate.ToString("MMMM dd,yyyy")</span>
                                </div>
                                @*<div class="entry">
                    <i class="fa fa-comments"></i>
                    <span>0 comments</span>
                </div>*@
                            </div>
                            <!--/blog-info-->
                        </div>
                        <!-- === blog post text === -->
                        <div class="blog-post-text">
                            @Model.blogDetail.Description
                        </div>
                        <div id="disqus_thread"></div>
                        <script>

/**
